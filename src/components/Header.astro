---
// Header.astro
---
<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- 로고 -->
            <div class="flex items-center gap-3 text-gray-800">
                <span class="material-icons text-primary-500" style="font-size: 32px; color: #3d98f4;">auto_stories</span>
                <h1 class="text-gray-800 text-xl sm:text-2xl font-bold tracking-tight">Tech Tales</h1>
            </div>

            <!-- 데스크톱 네비게이션 -->
            <nav class="hidden md:flex items-center gap-6">
                <div class="flex items-center gap-6">
                    <a class="text-gray-700 hover:text-primary-500 text-base font-medium transition-colors duration-200" href="/" style="--hover-color: #3d98f4;">Home</a>
                    <a class="text-gray-700 hover:text-primary-500 text-base font-medium transition-colors duration-200" href="/posts" style="--hover-color: #3d98f4;">Posts</a>
                    <a class="text-gray-700 hover:text-primary-500 text-base font-medium transition-colors duration-200" href="/about" style="--hover-color: #3d98f4;">About</a>
                    <a class="text-gray-700 hover:text-primary-500 text-base font-medium transition-colors duration-200" href="/contact" style="--hover-color: #3d98f4;">Contact</a>
                </div>
                <!-- 데스크톱 검색창 -->
                <div class="relative ml-4">
                    <input class="pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 w-64 text-sm" placeholder="Search..." style="--ring-color: #3d98f4; --border-color: #3d98f4;" type="search"/>
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="material-icons text-gray-400">search</span>
                    </div>
                </div>
            </nav>

            <!-- 모바일 메뉴 버튼 -->
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-gray-700 hover:text-primary-500 focus:outline-none focus:text-primary-500 transition-colors duration-200">
                    <span class="material-icons">menu</span>
                </button>
            </div>
        </div>

        <!-- 모바일 네비게이션 메뉴 -->
        <div id="mobile-menu" class="md:hidden hidden">
            <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-200">
                <a href="/" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-primary-500 hover:bg-gray-50 rounded-md transition-colors duration-200">Home</a>
                <a href="/posts" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-primary-500 hover:bg-gray-50 rounded-md transition-colors duration-200">Posts</a>
                <a href="/about" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-primary-500 hover:bg-gray-50 rounded-md transition-colors duration-200">About</a>
                <a href="/contact" class="block px-3 py-2 text-base font-medium text-gray-700 hover:text-primary-500 hover:bg-gray-50 rounded-md transition-colors duration-200">Contact</a>
                
                <!-- 모바일 검색창 -->
                <div class="px-3 py-2">
                    <div class="relative">
                        <input class="w-full pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 text-sm" placeholder="Search..." style="--ring-color: #3d98f4; --border-color: #3d98f4;" type="search"/>
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="material-icons text-gray-400">search</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    // 모바일 메뉴 토글 기능
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
            });
        }
    });
</script> 